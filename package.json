{
  "name": "tour-planner",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "designs": "http-server designs -p 8080 -c-1 --cors",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "i18n:extract": "npx i18next-parser --config i18next-parser.config.cjs",
    "i18n:extract:dry": "npx i18next-parser --config i18next-parser.config.cjs --fail-on-update",
    "i18n:check": "npx i18next-parser --config i18next-parser.config.cjs --fail-on-warnings",
    "test": "npm run test:unit && npm run test:e2e",
    "test:arch": "npm run test:docker:build && npm run test:docker",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "playwright test  --project=chromium",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:smoke": "playwright test tests/e2e/smoke.spec.ts",
    "test:e2e:auth": "playwright test tests/e2e/auth",
    "test:chromatic": "chromatic --exit-zero-on-changes",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:docker": "docker-compose up --abort-on-container-exit --exit-code-from playwright",
    "test:docker:build": "docker-compose build",
    "test:docker:down": "docker-compose down",
    "test:docker:chromium": "docker-compose run playwright npx playwright test --project=chromium",
    "test:docker:firefox": "docker-compose run playwright npx playwright test --project=firefox",
    "test:docker:webkit": "docker-compose run playwright npx playwright test --project=webkit",
    "test:docker:ui": "docker-compose run --service-ports playwright npx playwright test --ui --ui-host=0.0.0.0"
  },
  "dependencies": {
    "@astrojs/node": "^9.4.3",
    "@astrojs/react": "^4.3.1",
    "@astrojs/sitemap": "^3.5.1",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.3",
    "@react-email/components": "^1.0.1",
    "@react-email/render": "^2.0.0",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.75.0",
    "@tailwindcss/vite": "^4.1.13",
    "@tanstack/react-query": "^5.90.5",
    "@testing-library/react": "^16.3.0",
    "@types/lodash": "^4.17.20",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "astro": "^5.13.7",
    "astro-react-i18next": "^0.3.3",
    "cheerio": "^1.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lodash": "^4.17.21",
    "lucide-react": "^0.487.0",
    "nodemailer": "^7.0.10",
    "react": "^19.1.1",
    "react-day-picker": "^9.11.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.65.0",
    "react-hot-toast": "^2.6.0",
    "resend": "^6.4.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.13",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/compat": "1.2.7",
    "@eslint/js": "9.23.0",
    "@playwright/test": "^1.56.1",
    "@react-email/tailwind": "^2.0.1",
    "@storybook/addon-a11y": "^9.1.13",
    "@storybook/addon-docs": "^9.1.13",
    "@storybook/addon-onboarding": "^9.1.13",
    "@storybook/addon-themes": "^9.1.13",
    "@storybook/react-vite": "^9.1.13",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/nodemailer": "^7.0.3",
    "@typescript-eslint/eslint-plugin": "8.28.0",
    "@typescript-eslint/parser": "8.28.0",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.7",
    "chromatic": "^13.3.3",
    "daisyui": "^5.3.1",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "10.1.1",
    "eslint-import-resolver-typescript": "4.2.5",
    "eslint-plugin-astro": "1.3.1",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-prettier": "5.2.5",
    "eslint-plugin-react": "7.37.4",
    "eslint-plugin-react-compiler": "19.0.0-beta-aeaed83-20250323",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-storybook": "^9.1.13",
    "happy-dom": "^20.0.10",
    "http-server": "^14.1.1",
    "husky": "9.1.7",
    "i18next-parser": "^9.3.0",
    "jsdom": "^27.1.0",
    "lint-staged": "15.5.0",
    "pg": "^8.16.3",
    "postcss": "^8.5.6",
    "prettier-plugin-astro": "0.14.1",
    "shadcn": "^3.5.0",
    "storybook": "^9.1.13",
    "supabase": "^2.51.0",
    "theme-change": "^2.5.0",
    "tw-animate-css": "^1.4.0",
    "typescript-eslint": "8.28.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.7"
  },
  "lint-staged": {
    "*.{ts,tsx,astro}": [
      "eslint --fix"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
