{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Node: Astro Dev",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/astro",
      "runtimeArgs": ["dev"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Launch Chrome against localhost",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true
    },
    {
      "name": "Debug HTML File",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/http-server",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/http-server",
      "args": ["${workspaceFolder}/designs", "-p", "8080", "-c-1", "--cors"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "presentation": {
        "group": "html-debug",
        "order": 1
      }
    }
  ],
  "compounds": [
    {
      "name": "Node + Chrome",
      "configurations": ["Node: Astro Dev", "Launch Chrome against localhost"],
      "stopAll": true
    }
  ]
}
